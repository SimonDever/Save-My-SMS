<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shankarlabs.sms"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeDark" >
        <!-- 
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        -->
        
        <service android:name=".services.AuthHandlerService" >
			<intent-filter>
				<action android:name="com.shankarlabs.sms.authhandlerservice" />
			</intent-filter>
		</service>
        <service android:name=".services.GmailSyncService" />
            
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation" >

            <intent-filter >
                <action android:name="com.shankarlabs.sms.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".ui.SaveMySMSActivity"
            android:configChanges="keyboardHidden|orientation" >

            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".ui.SettingsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/DarkPrefTheme" >

            <intent-filter >
                <action android:name="com.shankarlabs.sms.Settings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        
        </activity>
    
    </application>

</manifest>